# MedVoice AI - Environment Variables
# Copy this file to .env and fill in your values

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key

# Google Cloud TTS (uses Firebase service account)
# No extra key needed - authenticated via GOOGLE_APPLICATION_CREDENTIALS

# Groq (primary LLM - ultra-fast inference)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL_PRIMARY=meta-llama/llama-4-maverick-17b-128e-instruct
GROQ_MODEL_FALLBACK=meta-llama/llama-guard-4-12b

# OpenRouter (optional fallback LLM)
# OPENROUTER_API_KEY=your_openrouter_api_key
# OPENROUTER_MODEL_PRIMARY=deepseek/deepseek-v3.2
# OPENROUTER_MODEL_FALLBACK=openai/gpt-4o-mini

# n8n
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.com

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Redis (optional - for active call state caching)
REDIS_URL=

# App Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEFAULT_LANGUAGE=fr
CLINIC_NAME=Clinique Medicale Saint-Laurent
CLINIC_ADDRESS=1234 Rue Saint-Laurent, Montreal QC
CLINIC_HOURS=Lundi-Vendredi 8h-17h, Samedi 9h-12h
